# TrueNAS SCALE Configuration
# WebSocket URL for TrueNAS API (use ws:// for WebSocket)
TRUENAS_URL=ws://your-truenas-ip/api/current

# Authentication - use either API key OR username/password
# Option 1: API Key (recommended for production)
TRUENAS_API_KEY=your-api-key-here

# Option 2: Username/Password (for development/testing)
# TRUENAS_USERNAME=root
# TRUENAS_PASSWORD=your-password

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Logging
VERBOSE=false